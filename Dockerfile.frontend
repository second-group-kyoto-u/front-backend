# Dockerfile.frontend

# ステージ1: Reactをビルド
FROM node:18-alpine AS build
WORKDIR /app
COPY .env ./
COPY frontend/ ./
RUN npm install && npm run build

# ステージ2: Nginxで提供
FROM nginx:alpine
COPY --from=build /app/dist /usr/share/nginx/html
COPY frontend/nginx.conf /etc/nginx/conf.d/default.conf
EXPOSE 80
